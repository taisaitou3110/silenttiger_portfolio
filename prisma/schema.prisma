// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Knowledge Cosmos 用のモデル拡張 ---

model Word {
  id              String       @id @default(cuid())
  term            String       @unique
  meaning         String       // 元の description を意味として使用
  phonetic        String?      // 発音記号
  scene           String?      // 出会ったシーン・書籍名（元 comments の役割）
  
  // エビングハウス忘却曲線ロジック用
  accuracy        Float        @default(0.0) // 記憶割合%
  easeFactor      Float        @default(2.5) // 難易度係数（初期値は定石の2.5）
  interval        Int          @default(0)   // 次回までの日数
  nextReview      DateTime     @default(now())
  
  // リレーション
  examples        Example[]    // 1単語につき最大10個の例文
  
  // 自己参照リレーション（混同しやすい語）
  // 多対多のリレーションとして定義
  confusingWith   Word[]       @relation("Confusion")
  confusedBy      Word[]       @relation("Confusion")

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Example {
  id              String       @id @default(cuid())
  text            String       // 例文
  collocation     String?      // 抽出されたコロケーション部分
  audioUrl        String?      // 自分の声の録音データURL
  
  wordId          String
  word            Word         @relation(fields: [wordId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime     @default(now())
}

// --- 既存モデルへのゴールド追加 ---

model UserSettings {
  id              String       @id @default(cuid())
  gold            Int          @default(0)   // ★他アプリ共通の持ちゴールド★
  
  // 以下、既存のカロリー管理用フィールド
  targetCalories  Int          @default(2000)
  weight          Float?
  activityLevel   String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  calorieLogs     CalorieLog[]
  customFoods     CustomFood[]
}
model CalorieLog {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  foodName    String
  calories    Int
  imagePath   String?  // 画像を保存する場合
  advice      String?  // Geminiからの削り出し助言
  inputSource String?  // 入力ソース (例: "voice", "photo", "text")
  userId      String?  // ユーザーID (UserSettingsと関連付ける場合)
  user        UserSettings? @relation(fields: [userId], references: [id])
}

model CustomFood {
  id        String   @id @default(cuid())
  name      String   @unique
  calories  Int
  userId    String?  // ユーザーID (UserSettingsと関連付ける場合)
  user      UserSettings? @relation(fields: [userId], references: [id])
}

model FoodPreset {
  id        String @id @default(cuid())
  name      String @unique
  calories  Int
}

model PokerAchiever {
  id          String    @id @default(cuid())
  name        String    @unique
  achievedAt  DateTime  @default(now())
  finalGold   Int
}

model Feedback {
  id        Int      @id @default(autoincrement()) // 通し番号
  name      String   @default("匿名")
  category  String   // 全般、ポーカー等
  content   String   @db.VarChar(100)
  reply     String?  // あなたの返信用
  createdAt DateTime @default(now())
}

model DevelopmentLog {
  id          Int      @id @default(autoincrement())
  date        DateTime
  title       String   @db.VarChar(30)
  progress    String   @db.VarChar(100)
  issues      String   @db.VarChar(400)
  attachment  String?
  createdAt   DateTime @default(now())
}
